#!/usr/bin/env bash
#

# SPDX-FileCopyrightText: 2024 SAP SE or an SAP affiliate company and Gardener contributors
#
# SPDX-License-Identifier: Apache-2.0

set -e

if [[ -z "${SOURCE_PATH}" ]]; then
  export SOURCE_PATH="$(readlink -f "$(dirname ${0})/..")"
else
  export SOURCE_PATH="$(readlink -f "${SOURCE_PATH}")"
fi

cd "${SOURCE_PATH}"

# Download kubernetes binaries
K8S_VERSION=1.35.0
ETCD_VER=v3.4.34

if ! which kubectl &>/dev/null; then
  echo "Error: kubectl must be available from PATH"
  exit 1
fi

mkdir -p /home/runner/.local/bin
export KUBEBUILDER_ASSETS=/home/runner/.local/bin

curl -LO https://dl.k8s.io/release/v${K8S_VERSION}/bin/linux/amd64/kube-apiserver
chmod +x kube-apiserver
mv kube-apiserver /home/runner/.local/bin/kube-apiserver

curl -L https://storage.googleapis.com/etcd/${ETCD_VER}/etcd-${ETCD_VER}-linux-amd64.tar.gz -o /tmp/etcd-${ETCD_VER}-linux-amd64.tar.gz
tar xzvf /tmp/etcd-${ETCD_VER}-linux-amd64.tar.gz  etcd-${ETCD_VER}-linux-amd64/etcd
mv etcd-${ETCD_VER}-linux-amd64/etcd /home/runner/.local/bin/etcd

go test ./cmd/... ./pkg/...
